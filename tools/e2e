#!/bin/bash

set -e

msg () {
   echo "====== running $1 tests ======"
}

msg "root"
bin/vulctl --version

msg "import snyk"
bin/vulctl --source test/image \
           --file internal/converter/snyk/test.json \
           --format snyk \
           --verbose

msg "import grype"
bin/vulctl --source test/image \
           --file internal/converter/grype/test.json \
           --format grype \
           --verbose

msg "import snyk"
bin/vulctl --source test/image \
           --file internal/converter/trivy/test.json \
           --format trivy \
           --verbose
