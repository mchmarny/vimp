#!/bin/bash

set -e

msg () {
   echo "====== running $1 tests ======"
}

msg "root"
bin/vulctl -v
bin/vulctl -h

msg "import snyk"
bin/vulctl import --source test/image \
                  --file examples/data/snyk.json \
                  --format snyk

msg "import grype"
bin/vulctl import --source test/image \
                  --file examples/data/grype.json \
                  --format grype

msg "import snyk"
bin/vulctl import --source test/image \
                  --file examples/data/trivy.json \
                  --format trivy
